<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent" android:layout_height="match_parent"
    android:layout_margin="16dp"
    android:orientation="vertical">
    <TextView
        style="?android:listSeparatorTextViewStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/alarm_welcome"/>
    <EditText
        android:id="@+id/alarm_time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter Time"/>
    <TextView
        style="?android:listSeparatorTextViewStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Repeat"/>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
    <CheckBox
        android:id="@+id/is_mon"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Mo"/>
    <CheckBox
        android:id="@+id/is_tue"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Tu"/>
        <CheckBox
            android:id="@+id/is_wed"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="We"/>
        <CheckBox
            android:id="@+id/is_thr"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Th"/>
        <CheckBox
            android:id="@+id/is_fri"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Fr"/>
        <CheckBox
            android:id="@+id/is_sat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Sa"/>
        <CheckBox
            android:id="@+id/is_sun"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Su"/>
    </LinearLayout>
    <TextView
        style="?android:listSeparatorTextViewStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Activity"/>
    <RadioGroup
        android:id="@+id/activity_radio_group"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/is_flashcards"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Flashcards"/>

        <RadioButton
            android:id="@+id/is_word_puzzle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Puzzle"/>
    </RadioGroup>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Button
            android:id="@+id/home_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:text="@string/home_button" />
        <Button
            android:id="@+id/submit_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:text="Submit" />
    </LinearLayout>

</LinearLayout>
